<Window x:Class="EmailFrontend.EmailLogPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Email Client" Height="800" Width="610" Background="#FFDEDEDE">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="53*"/>
        </Grid.RowDefinitions>
        <DataGrid Name="dataGrid1" ItemsSource="{Binding}" Margin="30,25,30,100" Grid.RowSpan="2" />
        <TextBox HorizontalAlignment="Left" Height="20" Margin="30,5,0,0" Text="Sent Emails" TextWrapping="Wrap" VerticalAlignment="Top" Width="125" BorderThickness="0" Background="#FFDEDEDE"/>
        <Button Content="Send Email" HorizontalAlignment="Center" Height="20" Margin="0,669,0,0" Click="Button_Click" Grid.Row="1" VerticalAlignment="Top" Width="142"/>
    </Grid>
</Window>
